<article class="post">
  <header class="post-head">
    <%- partial('post/title') %>
    <%- partial('post/date', {date_format: null}) %>
  </header>
  <% if (post.image){ %>
      <section class="post-images">
        <a href="<%- url_for(post.path) %>">
          <img src="<%- post.image %>" alt="featured-image">
        </a>
      </section>
  <% } %>
  <section class="post-excerpt">
    <% if (post.excerpt){ %>
      <%- post.excerpt %>
    <% } else { %>
      <%- post.content %>
    <% } %>
  </section>
</article>